{
  "info": {
    "name": "AI",
    "_postman_id": "ai-minimal-collection",
    "description": "Minimal AI endpoints collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "FLASK_BASE_URL", "value": "http://127.0.0.1:5000" },
    { "key": "AI_BEARER", "value": "" }
